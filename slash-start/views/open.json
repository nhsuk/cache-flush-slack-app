{
  "type": "modal",
  "title": {
    "type": "plain_text",
    "text": "Cache Flush"
  },
  "submit": {
    "type": "plain_text",
    "text": "Submit"
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel"
  },
  "blocks": [
    {
      "type": "input",
      "block_id": "environment",
      "element": {
        "type": "static_select",
        "action_id": "environment_input",
        "placeholder": {
          "type": "plain_text",
          "text": "Select the environment to flush URLs from"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "production"
            },
            "value": "production"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "staging"
            },
            "value": "staging"
          }
        ]
      },
      "label": {
        "type": "plain_text",
        "text": "Environment"
      }
    },
    {
      "type": "input",
      "block_id": "urls",
      "element": {
        "type": "plain_text_input",
        "action_id": "urls_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Add each URL to flush on a new line"
        }
      },
      "label": {
        "type": "plain_text",
        "text": "URLs"
      }
    }
  ]
}
